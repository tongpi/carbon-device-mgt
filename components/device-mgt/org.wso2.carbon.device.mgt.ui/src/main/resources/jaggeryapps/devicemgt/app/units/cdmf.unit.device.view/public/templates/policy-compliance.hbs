<div class="wr-list-group wr-sortable policy-list">
<span class="list-group-item" id="{{id}}">
    <div class="row">
        <div class="col-lg-3 clearfix">
            <span class="wr-list-icon">
                <i class="fw fw-policy"></i>
            </span>
            <span class="wr-list-desc">
                <h3 class="wr-list-name">{{policy.policyName}}</h3>
                <span class="wr-list-username">{{deviceType}}</span>
            </span>
        </div>
        <div class="col-lg-6">
            <div class="row no-gutter">
                <div class="wr-desc-list-configs col-lg-4">
                    <div>
                        <b>所有权类型: </b> {{policy.ownershipType}}
                    </div>
                </div>
                <div class="wr-desc-list-configs col-lg-4">
                    <div>
                        <b>服从性类型 :</b> {{policy.compliance}}
                    </div>
                </div>
                <div class="wr-desc-list-configs col-lg-4">
                    <div>
                        <b>服从性 :</b>
                        {{#equal compliance "COMPLIANT"}}
                            <span><i class="fw fw-success icon-success"></i> 服从的</span>
                        {{/equal}}
                        {{#equal compliance "NON-COMPLIANT"}}
                            <span><i class="fw fw-warning icon-danger"></i> 不服从的</span>
                        {{/equal}}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <span class="list-group-item-actions">
                <a href="{{appContext}}/policy/effective-policy?type={{deviceType}}&id={{deviceId}}"
                   class="cu-btn-inner policy-view-link" data-id="{{id}}">
                    <span class="fw-stack">
                        <i class="fw fw-circle-outline fw-stack-2x"></i>
                        <i class="fw fw-view fw-stack-1x"></i>
                    </span>
                    	查看
                </a>
            </span>
        </div>
    </div>
</span>
</div>
<table class="table table-striped table-hover table-bordered display data-table" id="policy-compliance-table">
    <thead>
        <tr class="sort-row">
            <th>特色</th>
            <th>服从性</th>
        </tr>
    </thead>
    <tbody>
    {{#each complianceFeatures}}
        <tr data-type="selectable">
            <td data-display="{{featureCode}}" data-grid-label="Feature Code">{{featureCode}}</td>
            <td data-display="{{compliance}}" data-grid-label="Status">
                {{#equal compliance true}}<span><i class="fw fw-success icon-success"></i> 服从</span>{{/equal}}
                {{#equal compliance false}}<span><i class="fw fw-warning icon-danger"></i> 不服从</span>{{/equal}}
            </td>
        </tr>
    {{/each}}
    <br class="c-both" />
    </tbody>
</table>