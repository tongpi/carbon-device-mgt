{{unit "cdmf.unit.ui.title" pageTitle="MQTT 面板"}}

{{unit "cdmf.unit.data-tables-extended"}}
{{unit "cdmf.unit.lib.ui-permissions-utility"}}

{{#zone "breadcrumbs"}}
    <li>
        <a href="{{@app.context}}/">
            <i class="icon fw fw-home"></i>
        </a>
    </li>
    <li>
        <!--suppress HtmlUnknownTarget -->
        <a href="{{@app.context}}/topics">
            面板
        </a>
    </li>
    <li>
        <a href="#">
            MQTT
        </a>
    </li>
{{/zone}}


{{#zone "content"}}
    <div class="wr-device-list row">
        <div class="wr-hidden-operations wr-advance-operations"></div>
        <div class="col-md-12 wr-page-content">
            <div>
                <span id="permission" data-permission="{{permissions.list}}"></span>
                <div id="loading-content" class="col-centered">
                    <i class="fw fw-settings fw-spin fw-2x"></i>
                    加载订阅 . . .
                    <br>
                </div>
                <div id="topics-listing-status" class="raw hidden">
                    <ul style="list-style-type: none;">
                        <li class="message message-info">
                            <h4>
                                <i class="icon fw fw-info"></i>
                                <a id="topics-listing-status-msg"></a>
                            </h4>
                        </li>
                    </ul>
                </div>
                <div id="topics-table">
                    <table class="table table-striped table-hover list-table display responsive nowrap data-table hidden"
                           id="topics-grid">
                        <thead>
                        <tr class="sort-row">
                            <th class="no-sort"></th>
                            <th>主题名称</th>
                            <th>保存信息数</th>
                            <th>激活数</th>
                            <th>持续时间</th>
                            <th>订阅队列名称</th>
                            <th>订阅标识符</th>
                        </tr>
                        <tr class="filter-row filter-box">
                            <th class="no-sort"></th>
                            <th data-for="主题名称" class="text-filter"></th>
                            <th data-for="保存信息数" class="text-filter"></th>
                            <th data-for="激活数" class="select-filter"></th>
                            <th data-for="持续时间" class="select-filter data-platform"></th>
                            <th data-for="订阅队列名称" class="select-filter"></th>
                            <th data-for="订阅标识符" class="select-filter"></th>
                            <!--<th class="no-sort"></th>-->
                        </tr>
                        </thead>
                        <tbody id="ast-container">

                        <br class="c-both" />
                        </tbody>
                    </table>
                </div>
                <br class="c-both" />
                <div id="content-filter-types" style="display: none">
                    <div class="sort-title">排序</div>
                    <div class="sort-options">
                        <a href="#">订阅队列或者主题名称<span class="ico-sort-asc"></span></a>
                        <a href="#">订阅者保存的本地消息数</a>
                        <a href="#">本地激活</a>
                        <a href="#">本地持续时间</a>
                        <a href="#">本地订阅队列名称</a>
                        <a href="#">本地订阅标识符</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/zone}}

{{#zone "bottomJs"}}
    <script id="device-listing" data-current-user="{{@user.username}}" data-device-types="{{deviceTypes}}"
            type="text/x-handlebars-template"></script>
    {{js "js/topic-listing.js"}}
{{/zone}}

{{#zone "topCss"}}
    <style>
        .select2-dropdown {
            z-index: 999999999;
        }

        .wr-input-control {
            color: black;
        }

        .select2-selection__choice {
            font-size: medium;
        }
    </style>
{{/zone}}
