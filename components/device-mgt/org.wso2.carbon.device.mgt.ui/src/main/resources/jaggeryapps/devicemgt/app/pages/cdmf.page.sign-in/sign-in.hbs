{{#zone "title"}}{{! to override parent page title }}{{/zone}}
{{unit "cdmf.unit.ui.title" pageTitle="登录"}}

{{#zone "content"}}
<div  class="login-content">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-sm-offset-3 col-md-offset-3 col-lg-offset-4" style="float:right; margin-right:40px;">
				<!--<p class="page-sub-title" >登录</p>
				<hr />-->
				{{#if message}}
					<div class="alert alert-danger" style="padding-right: 15px; margin-top:-60px;">
						<i class="icon fw fw-warning"></i> {{message}}!
					</div>
				{{/if}}
				<div class="panel-body">
				    <div class="login-box">
						<form id="signInForm" method="POST" action="{{loginActionUrl}}" class="login-form">
							<div class="form-group">
								<label for="username">用户名 *</label>
								<input type="text" name="username" class="form-control user" placeholder="请输入用户名"
									   autofocus="autofocus" required="required" />
							</div>
							<div class="form-group">
								<label for="password">密码 *</label>
								<input type="password" name="password" class="form-control password" autocomplete="off"
									   placeholder="请输入密码" required="required" />
							</div>
							{{#if sessionDataKey}}
								<input type="hidden" name="sessionDataKey" value="{{sessionDataKey}}" />
							{{/if}}
							{{#if referer}}
								<input type="hidden" name="referer" value="{{referer}}" />
							{{/if}}
							<div class="text-register" id="register-link-wrapper">
									<a href="{{@app.context}}/register">创建一个账号</a>
							</div>
							<div class="wr-input-control wr-btn-grp">
								<button class="login-btn">
										登录
								</button>
								
							</div>
						</form>
					</div>
				</div>
        </div>
    </div>
</div>
{{/zone}}
